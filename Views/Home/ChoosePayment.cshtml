@{
    ViewData["Title"] = "🌸 احجزي مكانك";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #fdf6f9;
        color: #333;
    }

    .payment-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
        background-color: #ffffff;
        border: 2px solid #e5bfd2;
        border-radius: 20px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.05);
    }

    .payment-title {
        text-align: center;
        color: #aa336a;
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 30px;
    }

    .payment-option {
        background-color: #fff0f5;
        border-radius: 15px;
        padding: 15px;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        cursor: pointer;
        border: 2px solid transparent;
        transition: border-color 0.3s ease;
    }

        .payment-option:hover {
            border-color: #d96c9c;
        }

        .payment-option input[type="radio"] {
            margin-right: 15px;
            transform: scale(1.3);
        }

    .btn-container {
        text-align: center;
        margin-top: 30px;
    }

    .btn-feminine {
        background-color: #d96c9c;
        color: white;
        border-radius: 25px;
        padding: 10px 30px;
        font-size: 1rem;
        border: none;
        margin: 0 10px;
        transition: background-color 0.3s ease;
    }

        .btn-feminine:hover {
            background-color: #b24c7d;
        }

    .custom-hr {
        border: none;
        border-top: 2px solid #e1b7c5;
        width: 60%;
        margin: 20px auto;
    }
</style>

<div class="payment-container">
    <h2 class="payment-title">@ViewData["Title"]</h2>
    <form method="post" asp-action="PayPage" asp-controller="SupportCircle">
        <input type="hidden" name="Price" value="@ViewBag.Price" />
        <input type="hidden" name="ServiceName" value="@ViewBag.ServiceName" />

        <label class="payment-option">
            <p style="text-align: center"> يتم توجيهك الان الى صفحة الدفع , هل تريدين الاستمرار ؟ </p>
        </label>
        <div class="btn-container">
            <button type="button" class="btn-feminine" onclick="window.history.back()">رجوع</button>
            <button type="submit" class="btn-feminine">استمرار</button>
        </div>
    </form>
</div>
