@model PaymentContracts.DTOs.PaymentDTO
@{
    ViewData["Title"] = "🌸 Enter Payment Information";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #fdf6f9;
        color: #333;
    }

    .payment-info-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
        background-color: #ffffff;
        border: 2px solid #e5bfd2;
        border-radius: 20px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.05);
    }

    .payment-info-title {
        text-align: center;
        color: #aa336a;
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 30px;
    }

    label {
        font-weight: 500;
        margin-top: 15px;
        color: #a6427a;
    }

    .form-control {
        border-radius: 12px;
        border: 1px solid #e5bfd2;
        padding: 12px;
        font-size: 1rem;
    }

        .form-control:focus {
            border-color: #d96c9c;
            box-shadow: 0 0 8px rgba(217, 108, 156, 0.3);
        }

    .btn-feminine {
        background-color: #d96c9c;
        color: white;
        border-radius: 25px;
        padding: 10px 30px;
        font-size: 1rem;
        border: none;
        margin-top: 25px;
        width: 100%;
        transition: background-color 0.3s ease;
    }

        .btn-feminine:hover {
            background-color: #b24c7d;
        }

    .custom-hr {
        border: none;
        border-top: 2px solid #e1b7c5;
        width: 60%;
        margin: 20px auto;
    }
</style>

<div class="payment-info-container">
    <h2 class="payment-info-title">@ViewData["Title"]</h2>

    <form asp-action="SubmitPaymentInfo" method="post">
        <div class="form-group">
            <label for="CardholderName">Cardholder Name</label>
          @*   <input asp-for="CardholderName" *@ class="form-control" required />
        </div>

        <div class="form-group">
            <label for="CardNumber">Card Number</label>
        @*     <input asp-for="CardNumber" *@ class="form-control" required />
        </div>

        <div class="row">
            <div class="col-md-6 form-group">
                <label for="ExpiryDate">Expiry Date</label>
               @*  <input asp-for="ExpiryDate" *@ class="form-control" placeholder="MM/YY" required />
            </div>
            <div class="col-md-6 form-group">
                <label for="CVV">CVV</label>
               @*  <input asp-for="CVV" *@ class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            <label for="BillingEmail">Billing Email (optional)</label>
            @* <input asp-for="BillingEmail" *@ class="form-control" />
        </div>

        <button type="submit" class="btn-feminine">Confirm Payment</button>
    </form>
</div>
