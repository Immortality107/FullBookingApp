    }

    input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ffd6e8;
        border-radius: 10px;
        outline: none;
        font-size: 0.95rem;
        transition: 0.2s;
    }

        input:focus {
            border-color: #d63384;
            box-shadow: 0 0 5px rgba(214, 51, 132, 0.3);
