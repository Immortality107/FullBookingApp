@{
    ViewData["Title"] = "🌸 Choose Your Session Type";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #fdf6f9;
    }

    .session-container {
        padding: 40px 20px;
    }

    .session-title {
        text-align: center;
        font-size: 2.2rem;
        font-weight: 600;
        color: #aa336a;
        margin-bottom: 40px;
    }

    .session-card {
        background-color: #ffffff;
        border: 2px solid #e5bfd2;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.05);
        margin-bottom: 30px;
        transition: transform 0.3s ease;
    }

    .session-card:hover {
        transform: scale(1.01);
    }

    .session-image {
        border-radius: 12px;
        width: 100%;
        max-width: 220px;
        height: auto;
        margin-left: 20px;
    }

    .session-type {
        font-size: 1.3rem;
        font-weight: 500;
        color: #b24c7d;
        margin-bottom: 10px;
    }

    .session-description {
        font-size: 0.95rem;
        color: #555;
        margin-top: 15px;
    }

    .btn-session {
        background-color: #d96c9c;
        color: white;
        border-radius: 25px;
        padding: 10px 22px;
        font-size: 1rem;
        margin: 10px 10px 0 0;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .btn-session:hover {
        background-color: #b24c7d;
        color: white;
    }
</style>

<div class="session-container container">
    <h1 class="session-title">@ViewData["Title"]</h1>

    <div class="row g-4">
        <!-- Offline Session -->
        <div class="col-md-6">
            <div class="session-card">
                <div class="d-flex align-items-center">
                    <div>
                        <div class="session-type">🧘 Offline Private Session</div>
                        <p class="session-description">
                           Duration : 1 hour <br />
                            Location : Sokoun Healing Center In First Settlement,New Cairo <br />
                            Fees : @ViewBag.PrivateSessionPrice - Per Session  <br />
                            OR @ViewBag.MonthlyPackagePrice For Monthly Package - 4 Sessions <br />
                            Session Within 1 Week From Booking Or Emergency Sessions Within 24 Hours. <br />
                            Notes : No Waiting Time At Center  <br />
                            Working Days : Sunday-Thursday <br />
                            You Can Choose Between Morning Or Night Appointments (Arranged After Booking).
                        </p>
                    </div>
                    <img src="~/LiliumOffline.jpg" alt="Offline Session" class="session-image" />
                </div>
                <div class="mt-3">
                    <a href="@Url.Action("ChoosePayment", "SupportCircle", new { price = "1700EGP", ServiceName ="استشارة فردية اوفلاين" })" class="btn-session">Book One Session</a>

                    <a href=" @Url.Action("ChoosePayment", "SupportCircle", new { price = "6200EGP", ServiceName = " باكدج استشارات شهريةاوفلاين" })" class="btn-session">Book Monthly Package</a>
                </div>
            </div>
        </div>

        <!-- Video Call Session -->
        <div class="col-md-6">
            <div class="session-card">
                <div class="d-flex align-items-center">
                    <div>
                        <div class="session-type">💻 VideoCall Private Session</div>
                        <p class="session-description">
                            Duration : 1 hour <br />
                            Location : Google Meet Application <br />
                            Fees : 1700EGP - Per Session  <br />
                            OR 5200EGP For Monthly Package - 4 Sessions <br />
                            Session Within 1 Week From Booking Or Emergency Sessions Within 24 Hours. <br />
                            Notes : You Receive Session Link Before Appointment  <br />
                            Morning Hours : 9-2pm <br />
                             Night Hours : 8-11pm
                        </p>
                    </div>
                    <img src="~/PrivateSessions.jpg" alt="Video Call Session" class="session-image" />
                </div>
                <div class="mt-3">
                    <a href="@Url.Action("ChoosePayment", "SupportCircle", new { price = "1700EGP", ServiceName = "استشارة فردية اونلاين" })" class="btn-session">Book One Session</a>
                    <a href=" @Url.Action("ChoosePayment", "SupportCircle", new { price = "5200EGP", ServiceName = "باكدج استشارات شهرية اونلاين" })" class="btn-session">Book Monthly Package</a>
                </div>
            </div>
        </div>
    </div>
</div>
