
@model IEnumerable<Service>

@{
    ViewData["Title"] = "🌸 Choose Your Support Circle";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #fdf6f9;
        color: #333;
    }

    .custom-hr {
        border: none;
        border-top: 2px solid #e1b7c5;
        width: 60%;
        margin: 20px auto;
    }

    .services-title {
        text-align: center;
        font-size: 2.5rem;
        font-weight: 700;
        color: #a83e77;
        margin-bottom: 30px;
        letter-spacing: 1px;
    }

    .service-card {
        background: linear-gradient(145deg, #fff0f6, #ffe4ec);
        border: 2px solid #f3c9da;
        border-radius: 20px;
        padding: 30px 25px;
        margin: 20px;
        box-shadow: 0 8px 24px rgba(255, 133, 173, 0.15);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        transition: transform 0.35s ease, box-shadow 0.35s ease;
        position: relative;
    }

        .service-card:hover {
            transform: translateY(-6px) scale(1.01);
            box-shadow: 0 12px 28px rgba(255, 133, 173, 0.25);
        }

        .service-card h5 {
            font-size: 1.6rem;
            color: #c1468d;
            font-weight: 600;
            margin-bottom: 12px;
            letter-spacing: 0.5px;
        }

        .service-card p {
            font-size: 1rem;
            color: #555;
            margin-bottom: 20px;
            line-height: 1.5;
            min-height: 70px;
        }

        .service-card h3 {
            font-size: 1.4rem;
            color: #b23773;
            margin-bottom: 15px;
            font-weight: 600;
        }

    .price-tag-icon::before {
        content: "⚡​";
        margin-right: 8px;
    }

    .btn-session {
        background-color: #e95f98;
        color: white;
        border: none;
        border-radius: 30px;
        padding: 12px 30px;
        font-size: 1rem;
        font-weight: 500;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-session:hover {
            background-color: #bf3d77;
            transform: scale(1.03);
            color: white;
        }

    .feminine-shape {
        text-align: center;
        margin: 18px 0;
    }

        .feminine-shape img {
            width: 45px;
            height: 45px;
            opacity: 0.5;
        }

    .ribbon-tag {
        position: absolute;
        top: -10px;
        right: -10px;
        background-color: #ff8db3;
        color: white;
        padding: 5px 15px;
        border-radius: 0 15px 0 15px;
        font-size: 0.8rem;
        font-weight: 600;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
    }
</style>

<div class="session-container container">
    <h1 class="session-title">@ViewData["Title"]</h1>
    <div class="row justify-content-center align-items-stretch">
        @foreach (var service in Model)
        {
            <div class="col-md-4 d-flex">
                <div class="service-card w-100">
                    <div class="ribbon-tag">Recommended</div> <!-- Optional Ribbon -->

                    <div>
                        <h5>@service.ServiceName</h5>
                        <p>@service.ServiceDescribtion</p>
                        <h3 class="price-tag-icon">@service.ServicePriceLocal EGP</h3>
                    </div>

                    <div class="feminine-shape">
                        <img src="~/nature.png" alt="decorative shape" />
                    </div>

                    @{
                        string price = service.ServicePriceLocal + "EGP";
                    }

                    <div class="text-center mt-3">
                        <a href="@Url.Action("Details", "SupportCircle", new { id = service.ServiceId, price })" class="btn-session">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


