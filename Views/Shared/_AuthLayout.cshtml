<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - MyApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            font-family: 'Segoe UI', sans-serif;
        }

            /* Background image */
            body::before {
               content: "";
               position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: url("~/LiliumCover.jpg") center/cover no-repeat;
                opacity: 0.3; /* Control how light/dark the background appears */
                z-index: -1;
            }

            /* Optional: add a subtle gradient overlay for softness */
            body::after {
                content: "";
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: linear-gradient(135deg, rgba(255, 230, 240, 0.3), rgba(249, 224, 255, 0.3));
                z-index: -1;
            }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    @RenderBody()
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
