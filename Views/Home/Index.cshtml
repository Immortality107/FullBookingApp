<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #fdf6f9;
    }

    .liliumCarousel {
        max-height: 400px;
        overflow: hidden;
    }

        .liliumCarousel img {
            object-fit: cover;
            height: 400px;
        }

    .lilium-container {
        padding: 40px 20px;
        text-align: center;
    }

    .lilium-title {
        font-weight: 600;
        font-size: 2.5rem;
        color: #aa336a;
        margin-bottom: 20px;
    }

    .lilium-image {
        max-width: 100%;
        height: auto;
        border-radius: 20px;
        margin-bottom: 30px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .lilium-button {
        margin: 10px;
        padding: 12px 24px;
        border-radius: 30px;
        border: none;
        background-color: #d96c9c;
        color: white;
        font-size: 1rem;
        transition: background-color 0.5s ease;
        text-decoration: none;
        display: inline-block;
    }

        .lilium-button:hover {
            background-color: #b24c7d;
        }

    hr.styled {
        border: none;
        height: 2px;
        background-color: #e8b2c5;
        margin: 40px auto;
        width: 80%;
    }

    #locationPopup {
        display: none;
        justify-content: center;
        align-items: center;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.6);
        z-index: 1000;
    }

    .review-container {
        width: 100%;
        height: 100px; /* Adjust height */
        overflow: hidden;
        position: relative;
        background: #fff0f5;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .review-scroller {
        display: flex;
        flex-direction: column;
        animation: scrollReviews 30s linear infinite;
    }

    .review-item {
        padding: 10px;
        font-size: 16px;
        border-bottom: 1px solid #eee;
        background-color: #fff;
    }

    @@keyframes scrollReviews {
        0%{ transform: translateY(0); }
        100%{ transform: translateY(-100%); }
    }

    /* Pause on hover (optional) */
    .review-container:hover .review-scroller {
        animation-play-state: paused;
    }
</style>

<div class="lilium-container">
    <h1 class="lilium-title">Welcome to Lilium 🌸 Asmaa Kamel</h1>

    <img src="~/LiliumCover.jpg" alt="Lilium Cover" class="lilium-image" />

    <a href="#" class="lilium-button" onclick="showLocationPopup('PrivateSession')">Book A Private Appointment</a>
    <a href="#" class="lilium-button" onclick="showLocationPopup('SupportCircle')">Book A Support Circle (Women Only)</a>
        <a href="@Url.Action("BookAppointment", "Booked")" class="btn-session">Continue</a>
    @Html.Partial("_PartialViewChooseLocation")
</div>

<hr class="styled" />

<h2 class="text-center text-muted">Reviews</h2>


<div class="review-container">
    <div class="review-scroller">
        @foreach (var review in Model)
        {
            Review? review1 = review.ToReview();
            <div class="review-item">@review.ReviewMessage</div> <br/>
          <div class="review-item">@review1?.booking?.client?.ClientName</div>
        }
    </div>
</div>

<hr class="styled" />

<script>
    let selectedSessionType = "";

   function showLocationPopup(sessionType) {
    selectedSessionType = sessionType; // "PrivateSession" or "SupportCircle"
        document.getElementById('locationPopup').style.display = 'flex';
    }

   function goToPage() {
    const selectedLocation = document.getElementById('countrySelect').value;

    if (!selectedLocation) {
        alert("أين أنت الأن؟");
        return;
    }

    if (selectedSessionType === "PrivateSession") {
        switch (selectedLocation) {
            case 'Egypt':
                window.location.href = "Home/LocalChooseSession";
                break;
            default:
                window.location.href = "Home/InternationalChooseSession";
                break;
        }
    } else if (selectedSessionType === "SupportCircle") {
        switch (selectedLocation) {
            case 'Egypt':
                window.location.href = "Home/LocalSupportCircle";
                break;
            default:
                window.location.href = "Home/InternationalSupportCircle";
                break;
        }
    }
}

